@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- Bootstrap & Animate.css assumed loaded -->

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="card shadow-lg p-5 rounded-4 border-0">
        <h2 class="text-center text-primary mb-4">
            <span class="me-2" style="font-size:1.8rem;">🔐</span> Privacy Policy
        </h2>

        <p class="fs-5">
            Welcome to <strong>FESVIC CBT Portal</strong>. This page explains how we handle and protect the personal information of all users (students and admins).
        </p>

        <section class="mt-5">
            <h4 class="fw-semibold mb-3 border-bottom pb-2">1. What Information We Collect</h4>
            <ul class="list-group list-group-flush fs-5">
                <li class="list-group-item ps-0"><i class="bi bi-person-fill text-primary me-2"></i>Student Name, Class, and Exam Number</li>
                <li class="list-group-item ps-0"><i class="bi bi-card-image text-primary me-2"></i>Photo (optional)</li>
                <li class="list-group-item ps-0"><i class="bi bi-journal-check text-primary me-2"></i>Quiz attempt history and scores</li>
                <li class="list-group-item ps-0"><i class="bi bi-shield-lock-fill text-primary me-2"></i>Admin login credentials</li>
            </ul>
        </section>

        <section class="mt-5">
            <h4 class="fw-semibold mb-3 border-bottom pb-2">2. How We Use Your Information</h4>
            <ul class="list-group list-group-flush fs-5">
                <li class="list-group-item ps-0"><i class="bi bi-person-check-fill text-primary me-2"></i>To register and identify students during quizzes</li>
                <li class="list-group-item ps-0"><i class="bi bi-folder-fill text-primary me-2"></i>To store exam results securely</li>
                <li class="list-group-item ps-0"><i class="bi bi-gear-fill text-primary me-2"></i>To allow administrators to manage subjects, questions, and performance</li>
            </ul>
        </section>

        <section class="mt-5">
            <h4 class="fw-semibold mb-3 border-bottom pb-2">3. Data Protection</h4>
            <p class="fs-5">
                All data is stored securely in a protected database. Only authorized admins can access student information.
            </p>
        </section>

        <section class="mt-5">
            <h4 class="fw-semibold mb-3 border-bottom pb-2">4. Cookies</h4>
            <p class="fs-5">
                This site may use cookies to manage session data for login and navigation. No personal information is stored in cookies.
            </p>
        </section>

        <section class="mt-5">
            <h4 class="fw-semibold mb-3 border-bottom pb-2">5. Contact</h4>
            <p class="fs-5">
                For any questions or concerns about privacy, please contact the school ICT team.
            </p>
        </section>

        <hr class="my-4" />

        <p class="text-center text-muted fst-italic mb-0">
            © @DateTime.Now.Year FESVIC International. All rights reserved.
        </p>
    </div>
</div>

<!-- Add this in your _Layout or head if not already included -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
