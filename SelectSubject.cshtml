@model List<FESVIC.Models.Subject>

@{
    ViewData["Title"] = "Select Subject";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - FESVIC</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(to bottom right, #4e54c8, #8f94fb);
            min-height: 100vh;
            margin: 0;
            padding: 30px 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .subject-title {
            color: #fff;
            font-weight: 700;
            text-align: center;
            margin-bottom: 40px;
            font-size: 2rem;
            text-shadow: 1px 1px 4px rgba(0,0,0,0.2);
        }

        .subject-card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            backdrop-filter: blur(6px);
            padding: 25px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            height: 100%;
        }

        .subject-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

        .card-title {
            font-size: 1.4rem;
            color: #4e54c8;
            font-weight: bold;
        }

        .card-text i {
            font-size: 1.1rem;
            vertical-align: middle;
        }

        .btn-start {
            background-color: #4e54c8;
            color: white;
            font-weight: 600;
            border-radius: 12px;
            padding: 10px;
            transition: all 0.3s ease-in-out;
        }

        .btn-start:hover {
            background-color: #383ecb;
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(56, 62, 203, 0.4);
        }

        .badge-complete {
            background-color: #28a745;
            font-size: 0.95rem;
            padding: 0.6rem 1rem;
            border-radius: 12px;
        }

        @@media (max-width: 576px) {
            .card-title {
                font-size: 1.2rem;
            }
            .subject-title {
                font-size: 1.6rem;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <h2 class="subject-title">ðŸ“˜ Select Subject to Attempt</h2>

        <div class="row g-4">
            @foreach (var subject in Model)
            {
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="subject-card d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title">@subject.Name</h5>
                            <p class="card-text">
                                <i class="bi bi-question-circle-fill text-info me-2"></i>
                                <strong>Questions:</strong> @subject.QuestionCount
                            </p>
                            <p class="card-text">
                                <i class="bi bi-clock-fill text-warning me-2"></i>
                                <strong>Time:</strong> @subject.Duration mins
                            </p>
                            <p class="card-text">
                                <i class="bi bi-bar-chart-fill text-success me-2"></i>
                                <strong>Difficulty:</strong> @subject.DifficultyLevel
                            </p>
                        </div>

                        <div class="mt-3">
                            @if (!subject.IsTaken)
                            {
                              <a asp-controller="Student"
   asp-action="Start"
   asp-route-examNumber="@ViewBag.ExamNumber"
   asp-route-subjectId="@subject.Id"
   class="btn btn-start w-100">
   <i class="bi bi-play-circle-fill me-2"></i> Start EXAM/TEST
</a>

                            }
                            else
                            {
                                <div class="text-center">
                                    <span class="badge badge-complete">
                                        <i class="bi bi-check-circle-fill me-1"></i> Completed
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>
