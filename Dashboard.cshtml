@model FESVIC.Models.Student
@{
    ViewData["Title"] = "Student Dashboard";
}

<style>
    /* Reset some defaults */
    * {
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #800020 0%, #fcefee 100%);
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .dashboard-container {
        background: #fff;
        max-width: 420px;
        width: 90%;
        padding: 35px 30px;
        border-radius: 24px;
        box-shadow:
            0 4px 8px rgba(0, 0, 0, 0.1),
            0 12px 40px rgba(128, 0, 32, 0.25);
        animation: fadeInUp 0.7s ease forwards;
        text-align: center;
    }

    h2 {
        font-size: 2.5rem;
        color: #800020;
        margin-bottom: 0.3rem;
        font-weight: 700;
        letter-spacing: 1.2px;
        text-shadow: 1px 1px 3px rgba(128,0,32,0.6);
    }

    .student-info {
        font-size: 1.15rem;
        color: #5a2a3e;
        margin-bottom: 35px;
        font-weight: 600;
        letter-spacing: 0.4px;
    }

    .student-info strong {
        color: #800020;
        font-weight: 700;
    }

    .actions {
        display: flex;
        justify-content: center;
        gap: 18px;
        flex-wrap: wrap;
    }

    .action-card {
        background: linear-gradient(145deg, #f9d6db, #f3b1bb);
        border: 2.5px solid #800020;
        border-radius: 16px;
        padding: 20px 25px;
        width: 180px;
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: 700;
        color: #800020;
        box-shadow:
            3px 6px 10px rgba(255, 182, 193, 0.6),
            inset 0 -3px 6px rgba(255, 255, 255, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        user-select: none;
    }

    .action-card:hover,
    .action-card:focus {
        background: #800020;
        color: #fff;
        box-shadow:
            0 8px 30px rgba(128, 0, 32, 0.6),
            inset 0 0 10px #ff9fb4;
        transform: translateY(-6px) scale(1.05);
        outline: none;
    }

    .action-card:active {
        transform: translateY(-2px) scale(0.98);
        box-shadow:
            0 5px 18px rgba(128, 0, 32, 0.5),
            inset 0 0 5px #ff9fb4;
    }

    .action-card svg,
    .action-card span {
        font-size: 1.5rem;
        pointer-events: none;
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(30px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @@media (max-width: 480px) {
        .dashboard-container {
            padding: 30px 20px;
            max-width: 100%;
            border-radius: 18px;
        }

        .action-card {
            width: 100%;
            font-size: 1.1rem;
            padding: 18px 20px;
        }

        h2 {
            font-size: 2rem;
        }
    }
</style>

<div class="dashboard-container" role="main" aria-label="Student Dashboard">
    <h2>Welcome, @Model.Name! ðŸŽ‰</h2>
    <div class="student-info" aria-live="polite" aria-atomic="true">
        Exam Number: <strong>@Model.ExamNumber</strong>
    </div>

    <nav class="actions" aria-label="Student actions">
        <a class="action-card" href="@Url.Action("SelectSubject", "Student")" role="button" aria-describedby="startQuizDesc">
            <span aria-hidden="true">ðŸ“š</span> SelectSubject 
        </a>
        <a class="action-card" href="@Url.Action("History", "Student")" role="button" aria-describedby="viewHistoryDesc">
            <span aria-hidden="true">ðŸ•“</span> View History
        </a>
    </nav>
</div>
