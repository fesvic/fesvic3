<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - COMPUTER BASED TEST</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
   <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.css" integrity="sha384-K6Pw4K5ET0LXKKf/IKtOmiDH5Pmf5nCW9T1EaALzSNzQeOWPqkGF2bbN61qRb69j" crossorigin="anonymous" />
    <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.js" integrity="sha384-o4Gmw0rZ/88WtJpjPvPXFmyPlCTK23YozscvK0OZ07s/0W9KUqFGx5T4bcIH5Ywv" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/contrib/auto-render.min.js" integrity="sha384-mll67QQIPq3uo36E+gQIkIAOYMT5K9Q2cM9h7cUJq1d4Zxw3V4SdAJNGSOJ6G+9E" crossorigin="anonymous"></script>

    <style>
        body {
            background: url('https://images.unsplash.com/photo-1581090700227-1e37b190418e?auto=format&fit=crop&w=1400&q=80') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', sans-serif;
            color: #fff;
        }

        .overlay {
            background: rgba(0, 0, 0, 0.65);
            min-height: 100vh;
            padding-bottom: 50px;
        }

        .navbar {
            border-bottom: 1px solid #ccc;
        }

        .card-style {
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            color: #333;
        }

        footer {
            color: #bbb;
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 60px;
            background: rgba(0, 0, 0, 0.6);
            line-height: 60px;
        }
    </style>
</head>
<body>
    <div class="overlay">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container">
                <a class="navbar-brand" href="/">📘 CBT System</a>
            </div>
        </nav>

        <div class="container">
            @RenderBody()
        </div>

        
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
