@model FESVIC.Models.Student
@{
    ViewData["Title"] = "Confirm Identity";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - FESVIC</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #4e54c8, #8f94fb);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card-glow {
            background: #fff;
            border-radius: 20px;
            padding: 40px 30px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 20px 60px rgba(78, 84, 200, 0.3);
            animation: fadeInUp 0.7s ease-in-out;
            text-align: center;
        }

        .card-glow h2 {
            font-weight: 700;
            color: #4e54c8;
            margin-bottom: 20px;
        }

        .profile-img {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            object-fit: cover;
            box-shadow: 0 0 0 5px #fff, 0 0 20px rgba(78, 84, 200, 0.5);
            transition: transform 0.4s ease;
        }

        .profile-img:hover {
            transform: scale(1.05);
        }

        .student-details {
            text-align: left;
            margin-top: 20px;
            font-size: 1rem;
            color: #333;
        }

        .student-details p {
            margin-bottom: 10px;
            font-weight: 600;
        }

        .btn-confirm {
            background-color: #4e54c8;
            color: #fff;
            border: none;
            border-radius: 14px;
            padding: 12px 25px;
            font-size: 1.1rem;
            font-weight: 600;
            margin-top: 25px;
            transition: background-color 0.3s, transform 0.2s ease;
        }

        .btn-confirm:hover {
            background-color: #383ecb;
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(56, 62, 203, 0.4);
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 576px) {
            .card-glow {
                padding: 30px 20px;
            }

            .student-details {
                font-size: 0.95rem;
            }

            .btn-confirm {
                font-size: 1rem;
                padding: 10px 20px;
            }
        }
    </style>
</head>
<body>

    <div class="card-glow">
        <h2>ðŸŽ“ Confirm Identity</h2>
        <img src="~/uploads/@Model.PhotoPath" alt="Student Photo" class="profile-img" />
        <div class="student-details">
            <p><strong>Full Name:</strong> @Model.Name</p>
            <p><strong>Exam Number:</strong> @Model.ExamNumber</p>
            <p><strong>Class:</strong> @Model.Class</p>
        </div>

        <form asp-controller="Student" asp-action="SelectSubject" method="post">
            <input type="hidden" name="examNumber" value="@Model.ExamNumber" />
            <button type="submit" class="btn btn-confirm">Start Quiz</button>
        </form>
    </div>

</body>
</html>
