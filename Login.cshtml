@{
    ViewData["Title"] = "Student Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - FESVIC</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Background gradient and page flex centering */
        body {
            background: linear-gradient(135deg, #4e54c8, #8f94fb);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            margin: 0;
        }

        /* Card container */
        .login-card {
            background: #fff;
            border-radius: 20px;
            padding: 40px 35px;
            max-width: 400px;
            width: 100%;
            box-shadow: 0 25px 50px rgba(78, 84, 200, 0.3);
            animation: fadeInUp 0.7s ease forwards;
            text-align: center;
            position: relative;
        }

        /* Title with emoji */
        .login-card h2 {
            font-weight: 700;
            color: #4e54c8;
            margin-bottom: 30px;
            font-size: 2rem;
            user-select: none;
        }

        /* Input label */
        label {
            font-weight: 600;
            color: #333;
        }

        /* Input field styling */
        input.form-control {
            border-radius: 12px;
            border: 1.8px solid #4e54c8;
            padding: 12px 15px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }
        input.form-control:focus {
            border-color: #383ecb;
            box-shadow: 0 0 8px #7f85f7;
            outline: none;
        }

        /* Login button styling */
        .btn-login {
            background-color: #4e54c8;
            color: #fff;
            font-weight: 600;
            border-radius: 14px;
            padding: 12px 0;
            font-size: 1.1rem;
            border: none;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            margin-top: 15px;
            width: 100%;
        }
        .btn-login:hover, .btn-login:focus {
            background-color: #383ecb;
            box-shadow: 0 8px 16px rgba(56, 62, 203, 0.5);
            outline: none;
        }

        /* Error alert styling */
        .alert {
            margin-top: 25px;
            font-weight: 600;
            font-size: 0.9rem;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(255, 0, 0, 0.15);
        }

        /* Animation for fadeInUp */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive tweaks */
        @@media (max-width: 480px) {
            .login-card {
                padding: 35px 25px;
                border-radius: 16px;
            }
            .login-card h2 {
                font-size: 1.6rem;
            }
            .btn-login {
                font-size: 1rem;
                padding: 10px 0;
            }
        }
    </style>
</head>
<body>

    <div class="login-card shadow-sm">
        <h2>ðŸŽ“ Student Login</h2>
        <form asp-action="Login" method="post" novalidate>
            <div class="mb-4 text-start">
                <label for="examNumber" class="form-label">Exam Number</label>
                <input type="text" id="examNumber" name="examNumber" class="form-control" required autofocus autocomplete="off" />
            </div>

            <button type="submit" class="btn btn-login">Login</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3" role="alert">@ViewBag.Error</div>
        }
    </div>

</body>
</html>
